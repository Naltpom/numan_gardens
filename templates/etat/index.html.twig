{% extends 'base.html.twig' %}

{% block title %}Etats{% endblock %}
{% block h1 %}Liste des etats{% endblock %}

{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Listes des Etats</h6>
        <a href="{{ path("etat_ajouter") }}"> <i class="fa fa-plus" style="color: black;"></i></a> 
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>ACTION</th>
                        <th>ID</th>
                        <th>Etat</th>
                        <th>Description</th>
                    <tr>
                </thead>
                <tbody>    
                    {% for etat in etats %}
                        <tr>
                            <td>
                                <div class="d-flex justify-content-around">
                                    <a href="{{ path("etat_modifier", { id: etat.id }) }}"> <i class="fa fa-edit" style="color: black;"></i></a>
                                    <a href="{{ path("etat_supprimer", { id: etat.id }) }}"> <i class="fa fa-trash" style="color: black;"></i></a>
                                </div>
                            </td>
                            <td>{{ etat.id }}</td>
                            <td>{{ etat.titre }}</td>
                            <td>{{ etat.description }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
