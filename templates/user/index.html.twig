{% extends 'base.html.twig' %}
{% block title %}Mon compte{% endblock %}
{% block h1 %}Liste des utilisateurs{% endblock %}
{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Liste des utilisateurs</h6>
        <a href="{{ path("app_register") }}"><i class="fa fa-plus" style="color: black;">Ajouter un utilisateur</i></a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr style="white-space: nowrap;">
                        <th>ACTION</th>
                        <th>Pseudo</th>
                        <th>Role</th>
                        <th>EDIT ROLE</th>
                        <th>email</th>
                        <th>nom</th>
                        <th>prenom</th>
                        <th>civilit√©</th>
                        <th>code postal</th>
                        <th>ville</th>
                        <th>adresse</th>
                    <tr>
                </thead>
                <tbody>    
                    {% for user in users %}
                        <tr style="white-space: nowrap;">
                            <td>
                                {# <div class="d-flex justify-content-around">
                                    <a href="{{ path("user_fiche", { id: user.id }) }}"><i class="fa fa-eye" style="color: black;"></i></a>
                                    <a href="{{ path("user_modifier", { id: user.id }) }}"> <i class="fa fa-edit" style="color: black;"></i></a>
                                    <a href="{{ path("user_supprimer", { id: user.id }) }}"> <i class="fa fa-trash" style="color: black;"></i></a>
                                </div> #}
                            </td>
                            <td>{{ user.pseudo }}</td>
                            <td>
                                {% for role in user.roles %}
                                    {{role}}<br>
                                {% endfor %}
                            </td>
                                    
                            <td><a href="{{ path("user_role", { id: user.id }) }}"> <i class="fa fa-trash" style="color: black;"></i></a></td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.civilite }}</td>
                            <td>{{ user.codePostal }}</td>
                            <td>{{ user.ville }}</td>
                            <td>{{ user.adresse }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>   



{% endblock %}
