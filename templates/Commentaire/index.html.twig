{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block h1 %}Listes des Commentaire{% endblock %}

{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Listes des Commentaires</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>ACTION</th>
                        <th>ID</th>
                        <th>Pseudo</th>
                        <th>Note</th>
                        <th>Etat</th>
                        <th>Commentaire</th>
                    <tr>
                </thead>
                <tbody>    
                    {% for commentaire in commentaires %}
                        <tr>
                            <td>
                                <div class="d-flex justify-content-around">
                                    <a href="{{ path("commentaire_modifier", { id: commentaire.id }) }}"><i class="fa fa-edit" style="color: black;"></i></a>
                                </div>
                            </td>
                            <td>{{ commentaire.id }}</td>
                            <td>{{ commentaire.user.pseudo }}</td>
                            <td>{{ commentaire.note }}</td>
                            <td>{{ commentaire.etat.titre }}</td>
                            <td>{{ commentaire.commentaire }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}