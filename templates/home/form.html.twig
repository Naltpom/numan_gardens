<form method="post" action="{{ path('categorie_selection') }}" class="m-0 p-0 form-inline mb-3">
    <div class="form-group">
        <input type="hidden" name="" value="">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="massage" value="massage" name="1"
                {% if categories is defined %}
                    {% for categorie in categories %}
                        {% for key, produits in categorie %}
                            {% for key, produits in categorie %}
                                {% if key is same as("massage") %}
                                    checked
                                {% endif %}             
                            {% endfor %}
                        {% endfor %}
                    {% endfor %}
                {% endif %}
                >
                <label class="form-check-label" for="massage">Massage</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="beaute" value="beaute" name="2"
                {% if categories is defined %}
                    {% for categorie in categories %}
                        {% for key, produits in categorie %}
                            {% for key, produits in categorie %}
                                {% if key is same as("beaute") %}
                                    checked
                                {% endif %}             
                            {% endfor %}
                        {% endfor %}
                    {% endfor %}
                {% endif %}                
                >
                <label class="form-check-label" for="beaute">Beauté</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="hammam" value="hammam" name="3"
                {% if categories is defined %}
                    {% for categorie in categories %}
                        {% for key, produits in categorie %}
                            {% for key, produits in categorie %}
                                {% if key is same as("hammam") %}
                                    checked
                                {% endif %}             
                            {% endfor %}
                        {% endfor %}
                    {% endfor %}
                {% endif %}               
                >
                <label class="form-check-label" for="hammam">Hammam</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="arganBio" value="arganBio" name="4"
                    {% if categories is defined %}
                        {% for categorie in categories %}
                            {% for key, produits in categorie %}
                                {% for key, produits in categorie %}
                                    {% if key is same as("hammam") %}
                                        checked
                                    {% endif %}             
                                {% endfor %}
                            {% endfor %}
                        {% endfor %}
                    {% endif %}   
                >
                <label class="form-check-label" for="arganBio">BIO</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="huilesVegetal" value="huilesVegetal" name="5"
                {% if categories is defined %}
                    {% for categorie in categories %}
                        {% for key, produits in categorie %}
                            {% for key, produits in categorie %}
                                {% if key is same as("huilesVegetal") %}
                                    checked
                                {% endif %}             
                            {% endfor %}
                        {% endfor %}
                    {% endfor %}
                {% endif %}                
                >
                <label class="form-check-label" for="huilesVegetal">Huiles Végétal</label>
            </div>
        <button class="btn btn-success">Filtrer</button>
    </div>
</form> 