{% extends 'base.html.twig' %}
{% block title %}NG Contact{% endblock %}

{% block body %}

    <main class="container">
    <section>
        <form method="POST" class="contact my-5">
            <div class="form-group col-md-6 mx-auto text-center">
              <label for="Email">Adresse E-mail</label>
              <input type="email" class="form-control email" id="Email" >
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group col-md-6 mx-auto text-center">
              <label for="Nom">Nom</label>
              <input type="text" class="form-control" id="Nom">
            </div>
            <div class="form-group col-md-6 mx-auto text-center">
              <textarea name="msg" id="msg" cols="100" rows="10" class="form-control" placeholder="Votre message..."></textarea>
            </div>
            <div class="col-md-6 mx-auto text-center"> 
            <button type="submit" class="btn btn-success col-md-3">Envoyer</button>
            </div> <br>
          </form>
    </section>
    




</main>
{% endblock %}
