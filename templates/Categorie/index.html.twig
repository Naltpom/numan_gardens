{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block h1 %}Listes des Catégories{% endblock %}

{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Listes des Catégories</h6>
        <a href="{{ path("categorie_new") }}"><i class="fa fa-plus" style="color: black;">Ajouter une catégorie</i></a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>ACTION</th>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Type</th>
                    <tr>
                </thead>
                <tbody>    
                    {% for categorie in liste_categories %}
                        <tr>
                            <td>
                                <div class="d-flex justify-content-around">
                                    <a href="{{ path("categorie_fiche", { id: categorie.id }) }}"><i class="fa fa-eye" style="color: black;"></i></a>
                                    <a href="{{ path("categorie_modifier", { id: categorie.id }) }}"> <i class="fa fa-edit" style="color: black;"></i></a>
                                    <a href="{{ path("categorie_supprimer", { id: categorie.id }) }}"> <i class="fa fa-trash" style="color: black;"></i></a>
                                </div>
                            </td>
                            <td>{{ categorie.id }}</td>
                            <td>{{ categorie.titre }}</td>
                            <td>{{ categorie.description }}</td>
                            <td>{{ categorie.type }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>   
{% endblock %}