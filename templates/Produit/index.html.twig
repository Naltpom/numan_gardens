{% extends 'base.html.twig' %}

{% block title %}NG Produits{% endblock %}


{% block h1  %} Liste des produits {% endblock %}
{% block body %}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Liste des produits</h6><a href="{{ path("produit_new") }}"><i class="fa fa-plus" style="color: black;">Ajouter un produit</i></a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>ACTIONS</th>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>Référence</th>
                        <th>Volume</th>
                        <th>Stock</th>
                        <th>Certificat</th>
                        <th>Catégorie</th>
                    </tr>  
                </thead> 
                <tbody>
                    {% for produit in liste_produits %}
                        <tr>
                            <td>
                                <div class="d-flex flex-column justify-content-around align-items-center" style="height:120px;">
                                    <a href="{{ path("produit_fiche", { id: produit.id }) }}"><i class="fa fa-eye" style="color: black;"></i></a>
                                    <a href="{{ path("produit_modifier", { id: produit.id }) }}"> <i class="fa fa-edit" style="color: black;"></i></a>
                                    <a href="{{ path("produit_supprimer", { id: produit.id }) }}"> <i class="fa fa-trash" style="color: black;"></i></a>
                                </div>
                            </td>
                            <td>{{ produit.id }}</td>
                            <td>{{ produit.titre }}</td>
                            <td style="min-width:500px;">{{ produit.description }}</td>
                            <td>{{ produit.prix }}</td>
                            <td>{{ produit.reference }}</td>
                            <td>{{ produit.volume }}</td>
                            <td>{{ produit.stock }}</td>
                            <td>{{ produit.certificat }}</td>
                            <td>{{ produit.categorie.titre}}</td>
                        </tr>
                    {% endfor %}
                </tbody>         
            </table>
        </div>
    </div>
</div>   
{% endblock %}